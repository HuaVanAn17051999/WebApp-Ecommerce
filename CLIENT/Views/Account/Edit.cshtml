@model CLIENT.Models.UserEditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = ViewData["Success"];
    var inforSession = (CLIENT.Models.InforSession)Session["InforSession"];
}
@section css {
    <link href="~/Content/css/common.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/login/css/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/login/css/adminlte.min.css">
}
<style>
    #capnhat {
        border: 0px;
        width: 176px;
        height: 40px;
        border-radius: 4px;
        color: rgb(74, 74, 74);
        font-size: 14px;
        background-color: rgb(253, 216, 53);
        cursor: pointer;
    }

    li {
        font-family: 'FontAwesome';
    }
</style>
<div class="container">
    <div class="row">
        @if (message != null)
        {
            <div class="col-md-12 ThongBaoThanhCong">
                <div class="alert alert-success textCss" role="alert">
                    @message
                </div>
            </div>
        }
        <div class="col-md-12">
            <div class="mb-2">
                <p class="textCss" style="font-size: 25px;">Thông tin tài khoản</p>
            </div>
            <div class="card">
                <div class="card-body login-card-body d-flex">
                    <div class="col-md-6">
                        @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @id = inforSession.UserId, @class = "formPassword" }))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="mb-2">
                                <label class="textCss">Họ và tên</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Họ và tên" } })
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger textCss custommessage" })
                            </div>
                            <div class="mb-2">
                                <label class="textCss">Tên đăng nhập</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Tên đăng nhập" } })
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger textCss custommessage" })
                            </div>
                            <div class="mb-2">
                                <label class="textCss">Số điện thoại</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Số điện thoại", type = "text" } })
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="fa fa-phone-square" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-2">
                                <label class="textCss">Email</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Email" } })
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="fa fa-envelope" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger textCss custommessage" })
                            </div>
                            <div class="mb-2">
                                <label class="textCss">Giới tính</label>
                                <div class="input-group">
                                    @Html.RadioButtonFor(model => model.GioiTinh, true)
                                    <span class="textCss pr-3">Nam</span>
                                    @Html.RadioButtonFor(model => model.GioiTinh, false)
                                    <span class="textCss">Nữ</span>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                    <label class="form-check-label textCss" for="exampleCheck1">Thay đổi mật khẩu</label>
                                </div>
                            </div>
                            <div class="collapse" id="collapseExample">
                                <div class="mb-2">
                                    <label class="textCss">Mật khẩu củ</label>
                                    <div class="input-group">
                                        @Html.PasswordFor(model => model.MatKhauCu, new { @class = "form-control textCss", placeholder = "Mật khẩu cũ", name = "MatKhauCu" })
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <label for="MatKhauCu" id="errorPassWordCu" class="error text-danger textCss custommessage"></label>
                                </div>
                                <div class="mb-2">
                                    <label class="textCss">Mật khẩu mới</label>
                                    <div class="input-group">
                                        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control textCss", placeholder = "Mật khẩu mới", name = "MatKhau" })
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <label for="MatKhau" id="errorPassWordMoi" class="error text-danger textCss custommessage"></label>
                                </div>
                                <div class="mb-2">
                                    <label class="textCss">Xác nhận mật khẩu</label>
                                    <div class="input-group">
                                        <input type="password" name="XacNhanMatKhau" value="" class="form-control textCss" placeholder="Xác nhận mật khẩu" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <i class="fa fa-lock" aria-hidden="true"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <label for="XacNhanMatKhau" id="errorPassWordXacNhan" class="error text-danger textCss custommessage"></label>
                                </div>
                            </div>
                            <div>
                                <button id="capnhat" type="submit" class="btn-submit textCss">Cập nhật</button>
                            </div>
                        }
                    </div>
                    <div class="col-md-6 d-flex align-items-center justify-content-center">
                        <img src="@Url.Content("~/Content/Account/account.png")" alt="account" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="~/Content/js/UserEdit.js"></script>
}