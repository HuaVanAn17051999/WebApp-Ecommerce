@model List<DO_AN_SEM3.Entities.Product>
@{
    ViewBag.Title = "ProductGetById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="~/Content/css/productGetById/style.css" rel="stylesheet" />
}

<div class="container py-5">
    @if (Model.Count > 0)
    {
        <div class="row pb-5 mb-4">
            @foreach (var item in Model)
             {
                var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                var gia = String.Format(info, "{0:c}", item.Price);
                var GiaTiemSauKhiGiamGia = item.Price * (100 - item.Discount) / 100;
                var formatGiaTienSauKhiGiamGia = String.Format(info, "{0:c}", GiaTiemSauKhiGiamGia);
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <!-- Card-->
                    <a href="~/chi-tiet-san-pham/@item.Seotitle/@item.Id">
                        <div class="card rounded shadow-sm border-0 mb-3">
                            <div class="card-body p-4">
                                <img src="@Url.Content("~/Content/UploadFile/" + item.ImagePath)" alt="" class="img-fluid d-block mx-auto mb-3">
                                <h5> <a href="#" class="text ten text-dark">@item.Name</a></h5>
                                <div>
                                    <p class="d-flex text mb-0">
                                        <span class="text gia">@gia</span>
                                        <span class="text-danger ml-2 text">- @item.Discount %</span>
                                    </p>
                                    <p class="text formatGiaTienSauKhiGiamGia">@formatGiaTienSauKhiGiamGia</p>
                                </div>
                                <ul class="list-inline small">
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star-o text-success"></i></li>
                                </ul>
                            </div>
                        </div>
                    </a>
                </div>
             }
         </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12 d-flex align-items-center justify-content-center">
                <div>
                    <p class="text-danger" style=" font-family: 'FontAwesome'; font-size: 30px;"> Chưa có sản phẩm nào !!!</p>
                </div>
            </div>
        </div>
    }
</div>

