@model DO_AN_SEM3.Models.Users.UserEditModel

@{
    ViewBag.Title = "Edit";
}
@section css {
    <link href="~/Content/Account/style.css" rel="stylesheet" />
}
<style>
    .ip {
        width: 400px;
    }

    .stt {
        font-size: 20px;
        text-transform: capitalize;
        font-family: 'FontAwesome';
        font-weight: bold;
    }
</style>
@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @id = "Id", @class = "d-flex justify-content-center" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card" style="width: 500px;">
        <div class="p-5">
            <div class="d-flex justify-content-center">
                <p class="textCss stt">Sửa thông tin người dùng</p>
            </div>
            <div class="mb-3">
                <label class="textCss">Họ và tên</label>
                <div class="input-group ip">
                    @Html.EditorFor(model => model.HoVaTen, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Họ và tên" } })
                    <div class="input-group-append">
                        <div class="input-group-text ">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.HoVaTen, "", new { @class = "text-danger textCss custommessage" })
            </div>
            <div class="mb-3">
                <label class="textCss">Tên đăng nhập</label>
                <div class="input-group ip">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Tên đăng nhập" } })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger textCss custommessage" })
            </div>
            <div class="mb-3">
                <label class="textCss">Số điện thoại</label>
                <div class="input-group ip">
                    @Html.EditorFor(model => model.Sdt, new { htmlAttributes = new { @class = "form-control textCss", placeholder = "Số điện thoại" } })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Sdt, "", new { @class = "text-danger textCss custommessage" })
            </div>
            <div>
                <label class="textCss">Giới tính</label>
                <div class="input-group">
                    @Html.RadioButtonFor(model => model.GioiTinh, true)
                    <span class="textCss pr-3">Nam</span>
                    @Html.RadioButtonFor(model => model.GioiTinh, false)
                    <span class="textCss">Nữ</span>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary btn-sm textCss">Cập nhật</button>
            </div>
        </div>
    </div>
}
